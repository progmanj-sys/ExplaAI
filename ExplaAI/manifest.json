{
  "manifest_version": 3,
  "name": "ExplaAI",
  "version": "1.0.0",
  "description": "Пояснює складні тексти простішою мовою за допомогою AI",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Відкрити ExplaAI",
    "default_icon": {
      "16": "images/logo_light.svg",
      "48": "images/logo_light.svg",
      "128": "images/logo_light.svg"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "images/logo_light.svg",
    "48": "images/logo_light.svg",
    "128": "images/logo_light.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.woff2",
        "images/*.svg",
        "explaai.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}