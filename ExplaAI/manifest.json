{
  "manifest_version": 3,
  "name": "ExplaAI",
  "version": "1.0.0",
  "description": "Пояснює складні тексти простішою мовою за допомогою AI",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://still-morning-2049.shyulia17.workers.dev/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Відкрити ExplaAI"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "images/logo_light.svg",
    "48": "images/logo_light.svg",
    "128": "images/logo_light.svg"
  }
}